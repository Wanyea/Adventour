<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    card_view:contentPadding="60dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true" >

    <RelativeLayout
        android:background="@drawable/ic_stamp_card"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/red_variant"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/firstLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateTextView"
            android:layout_alignLeft="@id/dateTextView"
            android:text="Location"
            android:textColor="@color/red_variant"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/secondLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstLocation"
            android:layout_alignLeft="@id/dateTextView"
            android:text="Location"
            android:textColor="@color/red_variant"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/thirdLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/secondLocation"
            android:layout_alignLeft="@id/dateTextView"
            android:text="Location"
            android:textColor="@color/red_variant"
            android:textSize="18sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>