<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    card_view:contentPadding="60dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="locationNameTextView"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:lineSpacingExtra="5dp"/>

        <TextView
            android:id="@+id/showOnMapTextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextView"
            android:layout_alignLeft="@id/nameTextView"
            android:clickable="true"
            android:focusable="true"
            android:text="Show on Map"
            android:textColor="@color/blue_main"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="12dp"/>


<!--        <TextView
            android:id="@+id/addPhotoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextView"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@id/showOnMapTextButton"
            android:clickable="true"
            android:text="Get Directions"
            android:textColor="@color/blue_main"
            android:textSize="16sp"
            android:textStyle="bold" />-->
    </RelativeLayout>
</androidx.cardview.widget.CardView>