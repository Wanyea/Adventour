<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BAF3FF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/adventour_text"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_adventour_text" />

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Log in"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#0E315C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupTextView" />

    <TextView
        android:id="@+id/signupTextView"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="7dp"
        android:clickable="true"
        android:gravity="center"
        android:text="Sign up"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#0E315C"
        app:layout_constraintBottom_toTopOf="@+id/loginTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adventour_text" />

    <ImageView
        android:id="@+id/logo_balloon"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="70dp"
        android:rotation="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/adventour_text"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_balloon_orig" />

    <ImageView
        android:id="@+id/cloud_1_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cloud_1" />

    <ImageView
        android:id="@+id/cloud_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cloud_3" />

</androidx.constraintlayout.widget.ConstraintLayout>