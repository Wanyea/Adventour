<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    card_view:contentPadding="60dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/lineView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/brown_variant"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/locationNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lineView"
            android:text="locationNameTextView"
            android:textColor="@color/blue_main"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dollarsTextView"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@id/locationNameTextView"
            android:layout_alignLeft="@id/locationNameTextView"
            android:text="$$$"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dollarsTextView"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dollarsTextView"
            android:minHeight="20dp"
            android:numStars="5" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dollarsTextView"
            android:layout_alignLeft="@id/locationNameTextView"
            android:text="123 Street, Orlando, FL 45678"
            android:textColor="@color/blue_main"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/addressTextView"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/sample1ImageView"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:foreground="@drawable/frame_brown_variant"
                    android:src="@drawable/sample_4by3"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/sample2ImageView"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:foreground="@drawable/frame_brown_variant"
                    android:src="@drawable/sample_4by3"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/sample3ImageView"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:foreground="@drawable/frame_brown_variant"
                    android:src="@drawable/sample_4by3"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>