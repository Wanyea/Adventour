<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeaconPost">

    <TextView
        android:id="@+id/beaconPostTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Beacon Post"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/privateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/privateSwitch"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/privateSwitch"
        app:layout_constraintBottom_toBottomOf="@id/privateSwitch"
        android:textSize="16dp"
        android:text="Private"/>

    <Switch
        android:id="@+id/privateSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/bgImageView"
        app:layout_constraintBottom_toTopOf="@id/bgImageView"/>

    <ImageView
        android:id="@+id/bgImageView"
        android:layout_width="380dp"
        android:layout_height="550dp"
        android:background="@drawable/ic_beacon_card_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <ImageView
        android:id="@+id/authorImageView"
        android:clickable="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="@id/bgImageView"
        app:layout_constraintStart_toStartOf="@id/bgImageView"
        android:src="@drawable/ic_user_icon_blue" />

    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/authorImageView"
        app:layout_constraintBottom_toBottomOf="@id/authorImageView"
        app:layout_constraintStart_toEndOf="@id/authorImageView"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/beaconPostDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00/00/00"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="@id/bgImageView"
        app:layout_constraintEnd_toStartOf="@id/likeImageView"
        android:layout_margin="20dp" />

    <ImageView
        android:id="@+id/likeImageView"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/ic_heart_line_icon"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/bgImageView"
        app:layout_constraintTop_toTopOf="@id/bgImageView"
        app:tint="@color/red_main" />

    <TextView
        android:id="@+id/likeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/likeImageView"
        app:layout_constraintStart_toStartOf="@id/likeImageView"
        app:layout_constraintEnd_toEndOf="@id/likeImageView"
        android:textSize="14sp"
        android:textColor="@color/red_variant"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/beaconTitleEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="@color/brown_variant"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="Beacon Title"
        android:textColor="@color/brown_variant"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/bgImageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/bgImageView"
        app:layout_constraintTop_toTopOf="@id/bgImageView" />

    <EditText
        android:id="@+id/beaconIntroEditText"
        android:layout_width="336dp"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_rectangle_brown_variant"
        android:gravity="top"
        android:padding="5dp"
        android:text="This is the introduction. Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beaconTitleEditText"
        android:maxLines="4"
        android:ellipsize="end" />

    <View
        android:id="@+id/lineView"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="@id/bgImageView"
        app:layout_constraintEnd_toEndOf="@id/bgImageView"
        app:layout_constraintTop_toBottomOf="@id/beaconIntroEditText"
        android:background="@color/brown_variant" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/beaconPostRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/lineView"
        app:layout_constraintBottom_toBottomOf="@id/bgImageView"
        app:layout_constraintStart_toStartOf="@id/bgImageView"
        app:layout_constraintEnd_toEndOf="@id/bgImageView"
        android:layout_margin="20dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"

        app:itemBackground="@color/navy_main"
        app:itemIconTint="@drawable/navbar_selector"
        app:itemTextColor="@drawable/navbar_selector"
        app:menu="@menu/bottom_nav_menu" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/postBeaconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_save_icon"
        app:fabSize="mini"
        android:scaleX="1.4"
        android:scaleY="1.4"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97" />

</androidx.constraintlayout.widget.ConstraintLayout>