<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AdventourAndroidVersion" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:actionBarStyle">@style/ThemeActionBar</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_main</item>
        <item name="colorPrimaryVariant">@color/red_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_main</item>
        <item name="colorSecondaryVariant">@color/blue_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/cyan_main</item>
        <item name="android:textColor">@color/navy_main</item>
        <item name="android:textColorHint">@color/blue_main</item>
    </style>

    <!-- Splash screen theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/cyan_main</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- Base application theme with upper-right menu (for Passport). -->
    <style name="Theme.AdventourAndroidVersion.Menu" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryVariant">@color/red_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_main</item>
        <item name="colorSecondaryVariant">@color/blue_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/cyan_main</item>
        <item name="android:textColor">@color/navy_main</item>
        <item name="android:textColorHint">@color/blue_main</item>
    </style>

    <!-- Slider theme. -->
    <style name="AdventourSlider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="thumbColor">@color/blue_main</item>
        <item name="trackColor">@color/blue_main_40</item>
        <item name="haloColor">@color/blue_main_40</item>
        <item name="tickColor">@color/blue_main</item>

        <item name="labelStyle">@style/Adventour.Tooltip</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="Adventour.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <!-- Background color of the Tooltip -->
        <item name="backgroundTint">@color/blue_main</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- Color used by the text in the Tooltip -->
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Login and Signup EditText theme. -->
    <style name="AdventourEditTextLoginSignup">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">50dp</item>

        <item name="android:scrollHorizontally">true</item>

        <item name="android:backgroundTint">@color/blue_main</item>
        <item name="drawableTint">@color/blue_main</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/navy_main</item>
    </style>

    <!-- Navbar / Navigation Bar theme. -->
    <style name="Navbar" parent="@style/Widget.Material3.BottomNavigationView">
        <item name="itemBackground">@color/navy_main</item>
        <item name="itemIconTint">@drawable/navbar_selector</item>
        <item name="itemTextColor">@drawable/navbar_selector</item>
    </style>

    <!-- Action Bar theme. -->
    <style name="ThemeActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
    </style>


</resources>